<link rel="stylesheet" href="/css/header.css">
<section id="header">
    <h1 class="Title">Codeial</h1>
    <div class="links-to-auth">
        <% if(locals.user){%>
            <li type="none">
                <a href="/users/profile/<%=user._id%>">
                    <%= user.name %>
                </a>
            </li>
            <li type="none">
                <a href="/users/sign-out">
                    Sign Out
                </a>
            </li>
        <%}else{%>
            <li type="none">
                <a href="/users/sign-in">
                    Sign In
                </a>
            </li>
            <li type="none">
                <a href="/users/sign-up">
                    Sign Up
                </a>
            </li>
        <%}%>
    </div>
   
    
</section>


